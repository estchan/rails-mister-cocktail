<h2><%= @cocktail.name %></h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %> of <%= dose.ingredient.name %>
    <%= link_to "🗑️", cocktail_dose_path(@cocktail, dose), method: :delete, data: { confirm: "Are you sure?" } %>
  </li>
  <% end %>
</ul>
<%= link_to 'Add dose description to this cocktail', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back', cocktails_path %>
