<%= simple_form_for(cocktail) do |f| %>
  <% if cocktail.errors.any? %>
    <div class="errors-container">
      <ul>
        <% cocktail.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
<% end %>
